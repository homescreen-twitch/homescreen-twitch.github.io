{
    "name": "Homescreen",
    "version": "1.0",
    "description": "Homescreen + Twitch!",
    "manifest_version": 2,
    "options_page": "options.html",
    "icons": { "16": "icon16.png" ,
	"32": "icon32.png" ,
	"48": "icon48.png" ,
    "128": "favicon.ico"},
    "browser_action": {
        "default_title": "Homescreen",
        "default_popup": "popup.html"
      },
    "permissions": [
        "https://api.twitch.tv/",
        "https://static-cdn.jtvnw.net/",
        "notifications",
        "storage"
      ]
  }